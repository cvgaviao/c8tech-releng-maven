                        <inherited>true</inherited>
                        <executions>
                            <execution>
                                <id>copy-deps-felix</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>br.com.c8tech.releng</groupId>
                                            <artifactId>fpom-deps-felix</artifactId>
                                            <version>1.0-SNAPSHOT</version>
                                            <type>properties</type>
                                            <classifier>felix_release</classifier>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.outputDirectory}/META-INF/maven/</outputDirectory>
                                            <destFileName>${itests.framework.dependencies.file}</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>when-building-paxexam-integrationTests-with-equinox-milestone</id>
            <activation>
                <file>
                    <exists>.c8tech.releng.itests.paxexam</exists>
                </file>
                <property>
                    <name>itests.osgi.framework</name>
                    <value>equinox_milestone</value>
                </property>
            </activation>
            <properties>
