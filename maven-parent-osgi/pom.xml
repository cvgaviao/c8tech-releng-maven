                <itests.osgi.framework.branch>milestone</itests.osgi.framework.branch>
                <version.eclipse.osgi>[3.13,3.14]</version.eclipse.osgi>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.eclipse.platform</groupId>
                    <artifactId>org.eclipse.osgi</artifactId>
                    <version>${version.eclipse.osgi}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
