<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>br.com.c8tech.releng</groupId>
        <artifactId>maven-parent-java</artifactId>
        <version>6.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>maven-parent-osgi</artifactId>
    <name>C8Tech Maven Parent OSGI POM</name>
    <description>The master parent POM aimed to set up the build of all C8Tech's OSGI Maven based projects.</description>
    <packaging>pom</packaging>

    <!-- Due a maven limitation, this MUST be replicated to all children -->
    <url>${c8tech.project.site.url}</url>
    <scm>
        <connection>${c8tech.scm.connection}</connection>
        <developerConnection>${c8tech.scm.connection.dev}</developerConnection>
        <url>${c8tech.scm.url}</url>
        <tag>HEAD</tag>
    </scm>
    <distributionManagement>
        <site>
            <id>${c8tech.distribution.site.id}</id>
            <name>${c8tech.distribution.site.name}</name>
            <url>${c8tech.distribution.site.url}</url>
        </site>
    </distributionManagement>
    <!-- end of per child setting -->

    <properties>
    
        <!-- ========================  -->
        <!--    PROJECT PROPERTIES     -->
        <!-- ========================  -->
        
        <!-- holder form timestamp computed by maven -->
        <osgi-version-qualifier>${maven.build.timestamp}</osgi-version-qualifier>

        <!-- an OSGi semantic version computed by build-helper-maven-plugi -->
        <bundle.short.version>${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}</bundle.short.version>

        <!-- a OSGi version containing the computed qualifier -->
        <bundle.full.version>${bundle.short.version}.${osgi-version-qualifier}</bundle.full.version>




        <!-- ========================  -->
        <!--  MAVEN PLUGIN VERSIONS    -->
        <!-- ========================  -->
        <maven-bundle.version>4.2.0</maven-bundle.version>
        <eclipse.aether.version>1.0.0.v20140518</eclipse.aether.version>

        <!-- Tools -->
        <pojosr.version>0.2.1</pojosr.version>

        <!-- OSGI -->
        <osgi.core.version>7.0.0</osgi.core.version>
        <osgi.cmpn.version>${osgi.core.version}</osgi.cmpn.version>
        <osgi.annotation.version>${osgi.core.version}</osgi.annotation.version>
        <pax-url.version>2.6.1</pax-url.version>

    </properties>

    <profiles>
        <profile>
            <!-- profile used to setup projects for OSGi bundle integration
                tests based on Pax-Exam -->
            <!-- it is activated only when the project contains a .c8tech.releng.itests.paxexam
                file. -->
            <!-- In order to run itest inside IDE you MUST activate one of the container profiles (equinox or felix) below -->
            <id>when-building-paxexam-integrationTests-project</id>
            <activation>
                <file>
                    <exists>.c8tech.releng.itests.paxexam</exists>
                </file>
            </activation>
            <properties>
<!--                 <argLine>-Xmx1024m</argLine> -->
                <itests.framework.dependencies.file>dependencies-${itests.osgi.framework.id}.properties</itests.framework.dependencies.file>
            </properties>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>br.com.c8tech.releng</groupId>
                        <artifactId>fpom-deps-osgi</artifactId>
                        <version>6.1-SNAPSHOT</version>
                        <scope>import</scope>
                        <type>pom</type>
                    </dependency>
                    <dependency>
                        <groupId>br.com.c8tech.releng</groupId>
                        <artifactId>fpom-itests-paxexam</artifactId>
                        <version>6.1-SNAPSHOT</version>
                        <scope>import</scope>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            <dependencies>
                <dependency>
                    <groupId>org.osgi</groupId>
                    <artifactId>osgi.core</artifactId>
                    <version>${osgi.core.version}</version>
                    <scope>provided</scope>
                </dependency>
                <dependency>
                    <groupId>org.osgi</groupId>
                    <artifactId>osgi.annotation</artifactId>
                    <version>${osgi.annotation.version}</version>
                    <scope>provided</scope>
                </dependency>
<!--                 <dependency> -->
<!--                     <groupId>org.osgi</groupId> -->
<!--                     <artifactId>osgi.cmpn</artifactId> -->
<!--                     <version>${osgi.cmpn.version}</version> -->
<!--                     <scope>provided</scope> -->
<!--                 </dependency> -->
                <dependency>
                    <groupId>br.com.c8tech.releng</groupId>
                    <artifactId>fpom-itests-paxexam</artifactId>
                    <version>${c8tech.releng.version}</version>
                    <type>pom</type>
                    <scope>test</scope>
                </dependency>
            </dependencies>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-enforcer-plugin</artifactId>
                            <version>${maven-enforcer.version}</version>
                            <inherited>true</inherited>
                            <configuration>
                                <failFast>true</failFast>
                                <fail>true</fail>
                                <ignoreCache>true</ignoreCache>
                            </configuration>
                            <executions>
                                <execution>
                                    <id>check-osgi-framework-property</id>
                                    <goals>
                                        <goal>enforce</goal>
                                    </goals>
                                    <phase>pre-integration-test</phase>
                                    <configuration>
                                        <rules>
                                            <requireProperty>
                                                <property>itests.osgi.framework</property>
                                            </requireProperty>
                                        </rules>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                        <plugin>
                            <groupId>org.apache.servicemix.tooling</groupId>
                            <artifactId>depends-maven-plugin</artifactId>
                            <version>${maven-depends.version}</version>
                        </plugin>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-surefire-plugin</artifactId>
                            <version>${maven-surefire.version}</version>
                            <configuration>
                                <skip>true</skip>
                            </configuration>
                        </plugin>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-failsafe-plugin</artifactId>
                            <version>${maven-surefire.version}</version>
                            <inherited>true</inherited>
                            <configuration>
                                <failIfNoTests>false</failIfNoTests>
                                <systemPropertyVariables>
                                    <itests.osgi.framework.id>${itests.osgi.framework.id}</itests.osgi.framework.id>
                                    <itests.project.version>${project.version}</itests.project.version>
                                    <itests.project.build.directory>${project.build.directory}</itests.project.build.directory>
                                    <itest.ide>false</itest.ide>
                                </systemPropertyVariables>
                                <!-- Let's put failsafe reports with surefire
                                    to have access to tests failures/success reports in sonar -->
                                <!-- <reportsDirectory>${project.build.directory}/surefire-reports</reportsDirectory> -->
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.servicemix.tooling</groupId>
                        <artifactId>depends-maven-plugin</artifactId>
                        <version>${maven-depends.version}</version>
                        <inherited>true</inherited>
                        <executions>
                            <execution>
                                <id>default-generate-depends-file</id>
                                <goals>
                                    <goal>generate-depends-file</goal>
                                </goals>
                                <phase>generate-resources</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

