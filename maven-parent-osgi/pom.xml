        <profile>
            <id>when-building-paxexam-integrationTests-with-equinox-current</id>
            <activation>
                <file>
                    <exists>.c8tech.releng.itests.paxexam</exists>
                </file>
                <property>
                    <name>itests.osgi.framework</name>
                    <value>equinox_current</value>
                </property>
            </activation>
            <properties>
                <itests.osgi.framework.id>equinox</itests.osgi.framework.id>
                <itests.osgi.framework.branch>current</itests.osgi.framework.branch>
            </properties>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>br.com.c8tech.releng</groupId>
                        <artifactId>fpom-deps-osgi</artifactId>
                        <version>1.3-SNAPSHOT</version>
                        <scope>import</scope>
                        <type>pom</type>
                    </dependency>
                    <dependency>
                        <groupId>br.com.c8tech.releng</groupId>
                        <artifactId>fpom-deps-equinox</artifactId>
                        <version>1.3-SNAPSHOT</version>
                        <scope>import</scope>
                        <type>pom</type>
                    </dependency>
                    <dependency>
                        <groupId>org.junit.vintage</groupId>
                        <artifactId>junit-vintage-engine</artifactId>
                        <version>${version.junit}</version>
                    </dependency>
