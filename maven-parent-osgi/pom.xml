            </properties>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>br.com.c8tech.releng</groupId>
                        <artifactId>fpom-deps-felix</artifactId>
                        <version>1.3-SNAPSHOT</version>
                        <scope>import</scope>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            <dependencies>
                <dependency>
                    <groupId>br.com.c8tech.releng</groupId>
                    <artifactId>fpom-deps-felix</artifactId>
                    <version>1.3-SNAPSHOT</version>
                    <type>pom</type>
                    <scope>test</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
