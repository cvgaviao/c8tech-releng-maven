                <version>${felix.resolver.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.osgi</groupId>
                        <artifactId>osgi.annotation</artifactId>
                    </exclusion>
                    <exclusion>
                        <artifactId>org.osgi.core</artifactId>
